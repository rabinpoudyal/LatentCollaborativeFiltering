<div class="row justify-content-md-center align-items-center">
  <div class="col col-lg-4 webforms">
    <h2 class="text-center"><span class="fa fa-lock"></span>&nbsp;LogIn</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%#= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter Email" %>
      </div>

      <div class="field form-group">
        <%#= f.label :password %>
        <div class="input-group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-info btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>